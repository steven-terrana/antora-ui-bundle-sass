{{#if navigation.length}}
  {{#each navigation}}
    {{#if ./content}}
      {{#if ./url}}
        {{~#if (eq ./urlType 'internal')}}
          <div class="nav-item">
            {{#if ./items.length}}
              <i class="material-icons" aria-hidden="true">chevron_right</i>
            {{/if}}
            <a  class="{{#unless ./items.length}}spacer{{/unless}}{{#if (eq @root.page.url ./url)}} is-current-page{{/if}}" href="{{{relativize ./url}}}">
              {{{./content}}}
            </a>
          </div>
        {{~else}}
          <div class="nav-item">
            {{#if ./items.length}}
              <i class="material-icons" aria-hidden="true">chevron_right</i>
            {{/if}}
            <a class="{{#unless ./items.length}}spacer{{/unless}}{{#if (eq @root.page.url ./url)}} is-current-page{{/if}}" href="{{{./url}}}">
              {{{./content}}}
            </a>
          </div>
        {{~/if}}
      {{else}}
        <div class="nav-item">
          {{#if ./items.length}}
            <i class="material-icons" aria-hidden="true">chevron_right</i>
          {{/if}}
          <span class="{{#unless ./items.length}}spacer{{/unless}}{{#if (eq @root.page.url ./url)}} is-current-page{{/if}}">
            {{{./content}}}
          </span>
        </div>
      {{/if}}
      {{#if ./items.length}}
        <div style="--depth={{../depth}}" class="nav-children-panel">
          {{> nav-tree navigation=./items depth=(increment ../depth)}}
        </div>
      {{/if}}
    {{/if}}
  {{/each}}
{{/if}}